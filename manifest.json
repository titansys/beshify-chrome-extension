{
  "manifest_version": 3,
  "name": "Beshify",
  "version": "0.0.1",
  "description": "Beshify Text Formatter allows users to easily insert a ðŸ¤¸ emoji between each word in their text on any webpage.",
  "permissions": ["activeTab", "contextMenus"],
  "icons": {
    "16": "icon.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}